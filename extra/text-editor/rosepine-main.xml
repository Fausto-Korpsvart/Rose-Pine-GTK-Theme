<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="rosepine-main" name="Rose Pine Main" version="1.0">
  <author>korpsvart</author>
  <description>Rose Pine Main theme for Gnome Text Editor</description>

  <!-- Colors -->
  <color name="pink"                        value="#ebbcba" />
  <color name="purple"                      value="#c4a7e7" />
  <color name="red"                         value="#eb6f92" />
  <color name="orange"                      value="#d6746f" />
  <color name="yellow"                      value="#f6c177" />
  <color name="green"                       value="#31748f" />
  <color name="blue"                        value="#9ccfd8" />
  <color name="base0"                       value="#191724" />
  <color name="base1"                       value="#1f1d2e" />
  <color name="base2"                       value="#26233a" />
  <color name="text0"                       value="#e0def4" />
  <color name="text1"                       value="#6e6a86" />
  <color name="text2"                       value="#908caa" />
  <color name="subtext0"                    value="#21202e" />
  <color name="overlay0"                    value="#403d52" />
  <color name="surface0"                    value="#524f67" />

  <!-- Global Settings -->
  <style name="text"                        background="base0" foreground="text0"/>
  <style name="selection"                   background="base2" foreground="text1"/>
  <style name="cursor"                      background="surface0" foreground="purple" bold="true"/>
  <style name="current-line"                background="base1"/>
  <style name="current-line-number"         background="base1" foreground="green"/>
  <style name="line-numbers"                background="base1" foreground="overlay0"/>
  <style name="draw-spaces"                 foreground="surface0"/>
  <style name="background-pattern"          background="subtext0"/>
  <style name="map-overlay"                 background="overlay0"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               background="green" foreground="base0" bold="true" />
  <style name="bracket-mismatch"            background="red" bold="true" />

  <!-- Search Matching -->
  <style name="search-match"                background="surface0" foreground="text0" bold="true" />
  <style name="quick-highlight-match"       background="text1"/>

  <!-- Search Shadow -->
  <style name="search-shadow"               background="#rgba(0,0,0,0.4)"/>

  <!-- Spellchecker Matching -->
  <style name="misspelled-match"            foreground="base2" background="text1"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="overlay0" italic="true" />
  <style name="def:shebang"                 foreground="overlay0" italic="true" />
  <style name="def:doc-comment-element"     foreground="overlay0" bold="true" />

  <!-- Diagnostics Underlining -->
  <style name="diagnostician::deprecated"   underline="error" underline-color="overlay0"/>
  <style name="diagnostician::unused"       underline="error" underline-color="overlay0"/>
  <style name="diagnostician::error"        underline="error" underline-color="red"/>
  <style name="diagnostician::note"         underline="error" underline-color="blue"/>
  <style name="diagnostician::warning"      underline="error" underline-color="orange"/>

  <!-- Constants and Variables-->
  <style name="def:constant"                foreground="red" />
  <style name="def:string"                  foreground="green" />
  <style name="def:special-char"            foreground="red" />
  <style name="def:special-constant"        foreground="orange" bold="true" />
  <style name="def:boolean"                 foreground="pink" />
  <style name="def:number"                  foreground="pink" />
  <style name="def:floating-point"          foreground="pink" />
  <style name="def:keyword"                 foreground="orange" bold="true" />
  <style name="def:builtin"                 foreground="orange" bold="true" />
  <style name="def:variable"                foreground="red" />

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="red" italic="true"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="orange" bold="true" />

  <!-- Types -->
  <style name="def:type"                    foreground="purple" bold="true" />

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="text0" bold="true"/>
  <style name="def:inline-code"             foreground="text2"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="blue"/>
  <style name="def:link-symbol"             foreground="text1" bold="true"/>
  <style name="def:link-destination"        italic="true" underline="true"/>
  <style name="def:heading"                 foreground="green" bold="true"/>
  <style name="def:thematic-break"          foreground="green" bold="true"/>
  <style name="def:preformatted-section"    foreground="text2"/>
  <style name="def:list-marker"             foreground="text0" bold="true"/>

  <!-- Others -->
  <style name="def:error"                   foreground="text0" background="red" bold="true" />
  <style name="def:warning"                 foreground="text1" background="orange" bold="true" />
  <style name="def:note"                    foreground="yellow" bold="true" />
  <style name="def:net-address-in-comment"  foreground="blue" italic="false" underline="true" />
  <style name="def:preprocessor"            foreground="green" />
  <style name="def:function"                foreground="text0" underline="true" />

  <!-- Unknown? -->
  <style name="def:specials"                background="red" />

  <!-- Language specific -->
  <style name="c:comment"                   foreground="overlay0"/>
  <style name="c:preprocessor"              foreground="text2" bold="false"/>
  <style name="c:boolean"                   foreground="purple"/>
  <style name="c:keyword"                   foreground="purple" bold="true"/>
  <style name="c:string"                    foreground="green"/>
  <style name="c:included-file"             foreground="orange"/>
  <style name="c:storage-class"             foreground="orange" bold="true"/>
  <style name="c:type"                      foreground="blue" bold="true"/>
  <style name="c:macro-name"                foreground="overlay0" bold="false"/>
  <style name="c:enum-name"                 foreground="red" bold="false"/>

  <style name="diff:added-line"             foreground="green"/>
  <style name="diff:removed-line"           foreground="pink"/>
  <style name="diff:changed-line"           foreground="blue"/>
  <style name="diff:diff-file"              foreground="blue" bold="true"/>
  <style name="diff:location"               foreground="green"/>
  <style name="diff:special-case"           foreground="text1" bold="true"/>

  <!-- GTK Doc -->
  <style name="gtk-doc:function-name"       bold="true"/>
  <style name="gtk-doc:function"            bold="true"/>
  <style name="gtk-doc:parameter"           bold="true"/>
  <style name="gtk-doc:constant"            bold="true"/>
  <style name="gtk-doc:type"                bold="true"/>
  <style name="gtk-doc:since"               bold="true"/>
  <style name="gtk-doc:return"              bold="true"/>
  <style name="gtk-doc:deprecated"          bold="true"/>
  <style name="gtk-doc:signal-name"         bold="true"/>
  <style name="gtk-doc:property-name"       bold="true"/>

  <style name="gutter:added-line"           foreground="blue"/>
  <style name="gutter:changed-line"         foreground="yellow"/>
  <style name="gutter:removed-line"         foreground="red"/>

  <style name="js:built-in-constructor"     foreground="pink"/>
  <style name="js:keyword"                  foreground="text2"/>
  <style name="js:string"                   foreground="green"/>
  <style name="js:template-literal"         foreground="green"/>
  <style name="js:built-in-function"        foreground="pink"/>
  <style name="js:built-in-method"          foreground="pink"/>

  <style name="latex:command"               foreground="blue" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

  <style name="xml:comment"                 foreground="overlay0"/>
  <style name="xml:attribute-name"          foreground="#orange" bold="false"/>
  <style name="xml:attribute-value"         foreground="green"/>
  <style name="xml:tag-match"               background="#rgba(114,159,207,.20)"/>

  <!-- C Styles -->
  <style name="c:preprocessor"              map-to="def:special-char" />

  <!-- Diff Styles -->
  <style name="diff:ignore"                 foreground="text0" />

  <!-- Ruby Styles -->
  <style name="ruby:module-handler"         foreground="orange" />
  <style name="ruby:symbol"                 foreground="pink" />
  <style name="ruby:regex"                  foreground="orange" />

  <!-- SH Styles -->
  <style name="sh:others"                   map-to="text0" />

  <!-- XML Styles -->
  <style name="xml:attribute-name"          foreground="text1" />
  <style name="xml:element-name"            foreground="red" />

  <!-- Symbol-tree xml-pack coloring -->
  <style name="symboltree::label"           foreground="surface0" background="#D5E7FC"/>
  <style name="symboltree::id"              foreground="surface0" background="#D9E7BD"/>
  <style name="symboltree::style-class"     foreground="surface0" background="#DFCD9B"/>
  <style name="symboltree::type"            foreground="surface0" background="#F4DAC3"/>
  <style name="symboltree::parent"          foreground="surface0" background="#DEBECF"/>
  <style name="symboltree::class"           foreground="surface0" background="#FFEF98"/>
  <style name="symboltree::attribute"       foreground="surface0" background="#F0E68C"/>

</style-scheme>
